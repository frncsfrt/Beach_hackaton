<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<body style="background-image: url('http://www.sitesquibuzz.com/wp-content/uploads/2015/06/Kate-Upton-sexy.jpeg'); background-size: cover;">

  <p id="notice"><%= notice %></p>

  <h1>Listing Places</h1>

  <table>
    <thead>
      <tr>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
      <tr>
        <td><%= place.address %></td>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <iframe frameborder="0" height="245" id="forecast_embed" src="http://forecast.io/embed/#lat=<%=place.latitude%>&lon=<%=place.longitude%>&name=<%=place.address%>" type="text/html" width="100%"></iframe>
        <div style='width: 800px;'>
          <div id="map" style='width: 800px; height: 400px;'></div>
        </div>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Place', new_place_path %>

  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({
      provider: {},
      internal: {
        id: 'map'
      }
    }, function () {
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(13);
    });
  </script>
</body>
